
<%=  button_to "Discover Movies", discover_path, method: :get %>

<% if params[:q] == "keyword" %>
  <h3> Movie results for: <%= params[:search] %>
<% else %>
  <h3> Top 20 Movies </h3>
<% end %>

<% @movies.each do |movie| %>
  <section id="movie-<%= movie.id%>">
    <%= link_to movie.title, movie_path(movie.id) %>
    <%=  " - Vote Average: #{movie.vote_average}" %></br>
  </section>
<% end %>